#include <iostream>

using namespace std;

int main()
{     int marks[5]={2,55,78,64,66};
    cout<<marks[0]<<endl;
    cout<<marks[1]<<endl;
    cout<<marks[2]<<endl;
    cout<<marks[3]<<endl;
    cout<<marks[4]<<endl;
    //pointers and array
    int* p=marks;
    cout<<"The value of marks [0]"<<*p<<endl;
    cout<<"The value of marks [1]"<<*(p+1)<<endl;
    cout<<"The value of marks [2]"<<*(p+2)<<endl;
    cout<<"The value of marks [3]"<<*(p+3)<<endl;
    cout<<"The value of marks [4]"<<*(p+4)<<endl;
    
    return 0;
}
