#include <iostream>

using namespace std;

int main()
{
    
    /*what is pointer ->it is the data type which holds the address of other data
    type*/
    int a=3;
    int * b=&a;
    cout<<"the address of a is "<<&a<<endl;
    cout<<"the address of a is "<<b<<endl;
    //&-->(address of) operator
    cout<<"the value at address b is"<<*b<<endl;
    //*-->dereference operator
    
    return 0;
}
